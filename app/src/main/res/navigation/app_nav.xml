<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.top5.features.auth.ui.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.top5.features.auth.ui.signup.SignUpFragment"
        android:label="SignUpFragment">
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.top5.features.favorites.ui.profile.ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/action_profileFragment_to_topFiveFragment"
            app:destination="@id/topFiveFragment"/>
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_to_viewableProfileFragment"
            app:destination="@id/viewableProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/topFiveFragment"
        android:name="com.example.top5.features.favorites.ui.topFive.TopFiveFragment"
        android:label="TopFiveFragment">
        <argument
            android:name="favoriteId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_topFiveFragment_to_searchMovieFragment"
            app:destination="@id/searchMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchMovieFragment"
        android:name="com.example.top5.features.movies.ui.SearchMovieFragment"
        android:label="SearchMovieFragment" />
    <fragment
        android:id="@+id/viewableProfileFragment"
        android:name="com.example.top5.features.favorites.ui.viewableProfile.ViewableProfileFragment"
        android:label="ViewableProfileFragment" >
        <action
            android:id="@+id/action_viewableProfileFragment_to_topFiveFragment"
            app:destination="@id/topFiveFragment" />
    </fragment>
</navigation>